{
  "name": "config-tool",
  "displayName": "Config Tool",
  "description": "Encrypt/decrypt configuration values using Spring Boot Config Server with intelligent server management",
  "version": "1.2.0",
  "publisher": "bibekbc",
  "icon": "icon.png",
  "keywords": [
    "config",
    "configuration",
    "spring-boot",
    "encryption",
    "decryption"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tenerity-bbc/ext-vscode-config-tool"
  },
  "qna": "https://github.com/tenerity-bbc/ext-vscode-config-tool/issues",
  "homepage": "https://github.com/tenerity-bbc/ext-vscode-config-tool#readme",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "config-tool.decrypt",
        "title": "Config Tool: Decrypt",
        "enablement": "config-tool.serverSelected"
      },
      {
        "command": "config-tool.encrypt",
        "title": "Config Tool: Encrypt",
        "enablement": "editorHasSelection && config-tool.serverSelected"
      },
      {
        "command": "config-tool.selectServer",
        "title": "Config Tool: Select Server"
      },
      {
        "command": "config-tool.pinServer",
        "title": "Config Tool: Pin Current Server"
      },
      {
        "command": "config-tool.unpinServer",
        "title": "Config Tool: Unpin Server"
      },
      {
        "command": "config-tool.cancel",
        "title": "Config Tool: Cancel Operation"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "config-tool.encrypt",
          "group": "config-tool@1"
        },
        {
          "command": "config-tool.decrypt",
          "group": "config-tool@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "config-tool.encrypt",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "when": "editorTextFocus"
      },
      {
        "command": "config-tool.decrypt",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "config-tool.selectServer",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s"
      },
      {
        "command": "config-tool.pinServer",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p"
      },
      {
        "command": "config-tool.unpinServer",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u"
      },
      {
        "command": "config-tool.cancel",
        "key": "escape",
        "when": "editorTextFocus && !suggestWidgetVisible && !findWidgetVisible && !inQuickOpen && !quickInputVisible"
      }
    ],
    "configuration": {
      "title": "Config Tool",
      "properties": {
        "configTool.servers": {
          "type": "object",
          "default": {
            "ng-dev": "https://ng-config-server.int.dev.affinionservices.com/config-server",
            "ng-qa": "https://ng-config-server.int.qa.affinionservices.com/config-server",
            "ng-stage": "https://ng-config-server.int.stage-affinionservices.com/config-server",
            "ng-us-stage": "https://ng-config-server-us.int.stage-affinionservices.com/config-server",
            "ng-prod": "https://ng-config-server.int.affinionservices.com/config-server",
            "ng-us-prod": "https://ng-config-server-us.int.affinionservices.com/config-server",
            "apg-dev": "https://apg-config-server.int.dev.affinionservices.com/configserver",
            "apg-qa": "https://apg-config-server.int.qa.affinionservices.com/configserver",
            "apg-stage": "https://apg-config-server.int.stage-affinionservices.com/configserver",
            "apg-us-stage": "https://apg-config-server-us.int.stage-affinionservices.com/configserver",
            "apg-prod": "https://apg-config-server.int.affinionservices.com/configserver",
            "apg-us-prod": "https://apg-config-server-us.int.affinionservices.com/configserver"
          },
          "description": "Config server URLs for all environments"
        },
        "configTool.autoSelectServer": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic server selection using serverSelectors rules (requires serverSelectors to be configured)"
        },
        "configTool.serverSelectors": {
          "type": "array",
          "default": [
            {
              "name": "APG Config Store",
              "pattern": "[/\\\\]gce-apg-config-store[/\\\\]([^/\\\\]+)[/\\\\]",
              "serverKey": "apg-$1"
            },
            {
              "name": "NG Config Store with Regional Support",
              "pattern": "[/\\\\]gce-ng-config-store[/\\\\][^/\\\\]+[/\\\\][^/\\\\]+-(\\w+)\\.ya?ml$",
              "serverKey": "ng-{git:ancestorRegion[develop=,develop-US=us-]}$1"
            }
          ],
          "description": "Server selector rules with pattern matching and inline ancestor region mapping (required when autoSelectServer is true)",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Human-readable name for this rule (optional, for documentation and debugging)"
              },
              "pattern": {
                "type": "string",
                "description": "Regex pattern to match file paths"
              },
              "serverKey": {
                "type": "string",
                "description": "Server key template with $1, $2 (regex groups) and {git:ancestorRegion[branch=value]} placeholders"
              }
            },
            "required": [
              "pattern",
              "serverKey"
            ],
            "additionalProperties": false
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "npm run compile -- --watch",
    "package": "npm run compile -- --minify",
    "pretest": "npm run package && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build-package": "vsce package",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.25.1",
    "semantic-release": "^22.0.12",
    "sinon": "^19.0.5",
    "typescript": "^5.8.3",
    "esbuild": "^0.24.0"
  },
  "dependencies": {
    "isomorphic-git": "^1.32.1"
  }
}
